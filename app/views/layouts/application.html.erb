<!DOCTYPE html>
<html>
<head>
  <title>LetsGetGo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<style>
    .pure-g {
        margin: 10px;
        padding: 0;
    }
</style>

<body>
<div class="pure-menu pure-menu-horizontal pure-menu-scrollable" style="background-color: #191818">
  <a href="#" class="pure-menu-link pure-menu-heading">Let's Get Go!</a>
  <ul class="pure-menu-list">
    <li class="pure-menu-item">
      <%= link_to timeline_show_path, class: 'pure-menu-link' do %>
        <i class="fa fa-folder"></i> 投稿一覧
      <% end %>
    </li>
    <li class="pure-menu-item"><a href="#" class="pure-menu-link"><i class="fa fa-line-chart"></i> ランキング</a></li>
    <li class="pure-menu-item"><a href="#" class="pure-menu-link"><i class="fa fa-home"></i> マイページ</a></li>
    <li class="pure-menu-item">
      <%= link_to new_article_path, class: 'pure-menu-link' do %>
          <i class="fa fa-pencil-square-o"></i> 投稿する
      <% end %>
    </li>
    <li class="pure-menu-item">
      <% if user_signed_in? %>
        <%= link_to destroy_user_session_path, class: 'pure-menu-link', method: :delete do %>
          <i class="fa fa-sign-out"></i> ログアウト
        <% end %>
      <% else %>
        <%= link_to new_user_session_path, class: 'pure-menu-link', method: :GET do %>
          <i class="fa fa-sign-in"></i> ログイン
        <% end %>
      <% end %>
    </li>
  </ul>
</div>
  <div class="pure-g">
    <%= yield %>
    <div class="pure-u-1-6" style="margin-left: auto">
      <h2>ランキング</h2>
      <table class="pure-table">
        <thead>
        <tr>
          <th>順位</th>
          <th>名前</th>
          <th>ポイント</th>
        </tr>
        </thead>

        <tbody>
        <tr class="pure-table-odd">
          <td>1</td>
          <td>honda</td>
          <td>2789</td>
        </tr>

        <tr>
          <td>2</td>
          <td>Toyota</td>
          <td>2112</td>
        </tr>

        <tr class="pure-table-odd">
          <td>3</td>
          <td>Hujibayashi</td>
          <td>2010</td>
        </tr>

        <tr>
          <td>4</td>
          <td>Ford</td>
          <td>1998</td>
        </tr>

        <tr class="pure-table-odd">
          <td>5</td>
          <td>Nishino</td>
          <td>1865</td>
        </tr>

        <tr>
          <td>6</td>
          <td>hayashi</td>
          <td>1660</td>
        </tr>

        <tr class="pure-table-odd">
          <td>7</td>
          <td>Honma</td>
          <td>1467</td>
        </tr>

        <tr>
          <td>8</td>
          <td>Kikuchi</td>
          <td>1219</td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
