<div class="pure-u-1">
  <% if @article.is_beginner? %>
    <p>初心者</p>
  <% end %>
</div>

<div class="pure-g">
  <div class="pure-u-2-24"></div>
  <div class="pure-u-22-24">
    <div class="posts">

      <!-- A single blog post -->
      <div class="post">
        <header class="post-header">
          <h2 class="post-title"><%= @article.title %></h2>

          <p class="post-meta">
            By <a href="#" class="post-author">USER NAME</a>
            <span> #初心者 </span>
          </p>
        </header>

        <div class="post-description">
          <%= @article.text %>
        </div>
      </div>
      <p><a href= <%= @article.github_url %> >github URL </a></p>
    </div>

    <hr>
    <h2 class="post-title">ログ</h2>
    <div class="post">

      <div class="post-description">
        <% if @reviews.present? %>
          <% @reviews.each do |r| %>
            <header class="post-header">
              <p class="pure-u-1"">
                By <%= r.user_name %></p>
            </header>
            <tr>
              <td><%= r.text %></td>
            </tr>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="pure-form">


      <p>ログ</p>
      <div class="pure-form" class="pure-form pure-form-stacked">
        <%= form_tag('/article/create_review') do %>
          <input type="hidden" name="id" value=<%=@article.id%>>
          <input type="text" name="text" /><br />
          <input type="submit" value="send" class="pure-button pure-button-primary">
        <% end %>
      </div>
    </div>
  </div>

  <div class="pure-form">
    <%= form_tag('/article/approve') do %>
      <input type="hidden" name="id" value=<%=@article.id%>>
      <input type="submit" value="GO" class="pure-button pure-button-primary">
    <% end %>
    <p>Go は</p>
    <%= @go_number  %>
    <p>個</p>
  </div>
</div>
