<style type="text/css">
  .block {
    border: #ffb6c1 solid 1px;
    border-left: #ffb6c1 solid 10px;
    padding: 20px;
    background: #fff;
  }
</style> 
<div class="pure-u-1">
  <% if @article.is_beginner? %>
    <p>初心者</p>
  <% end %>
</div>

<div class="pure-g">
  <div class="pure-u-2-24"></div>
  <div class="pure-u-22-24">
    <div class="posts">

      <!-- A single blog post -->
      <div class="post">
        <header class="post-header">
          <h2 class="post-title"><%= @article.title %></h2>

          <p class="post-meta">
            By <a href="#" class="post-author">USER NAME</a>
            <span> #初心者 </span>
          </p>
        </header>

        <div class="post-description">
          <%= @article.text %>
        </div>
      </div>
      <p><a href= <%= @article.github_url %> >github URL </a></p>
    </div>

    <hr>
    <h2 class="post-title">ログ</h2>

      <div class="post-description .block" >
        <% if @reviews.present? %>
          <% @reviews.each do |r| %>
            <div style="border: #ffb6c1 solid 1px; margin-top: 10px;">
            <header class="post-header">
              <p class="pure-u-1">
                By <%= r.user_name %></p>
            </header>
            <tr>
              <td><%= r.text %></td>
            </tr>
            </div>
          <% end %>
        <% end %>
      </div>

    <div class="pure-form">
      <p>レビューを書く</p>
      <div class="pure-form" class="pure-form pure-form-stacked">
        <%= form_tag('/article/create_review') do %>
          <input type="hidden" name="id" value=<%=@article.id%>>
          <input type="text" name="text" /><br />
          <input type="submit" value="send" style="margin-top:20px" class="pure-button pure-button-primary">
        <% end %>
      </div>
    </div>
  </div>

  <div class="pure-form" style="margin-left:25px">
    <%= form_tag('/article/approve') do %>
      <input type="hidden" name="id" value=<%=@article.id%>>
      <input style="margin-top:20px"  type="submit" value="GO" class="pure-button pure-button-primary">
    <% end %>
    <div class="pure-u-1">
      <p>Go は <%= @go_number  %> 個</p>
    </div>
  </div>
</div>
</body><iframe src="./LetsGetGo_files/commandbox.html" id="vichrome-commandframe" seamless="" style="display: none;"></iframe></html>
